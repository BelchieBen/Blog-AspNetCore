@model Post
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center">
        <h2 class="display-4">@Model.Title</h2>
        @if (!String.IsNullOrEmpty(Model.Image))
        {
            var image_path = $"/Image/{Model.Image}";
            <img src="@image_path" width="500" />
        }
        <p>@Model.Body</p>
    </div>
</div>
